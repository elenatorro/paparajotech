      <section class="pt-contact__section">
        <h4 id="#pt-about-us">{{t 'contact.template.aboutUs'}}</h4>
        <p>{{t 'contact.template.aboutUsDescription'}}</p>
      </section>

      <section class="pt-contact__section">
        <h4 id="#pt-contact-us">{{t 'contact.template.contactUs'}}</h4>
