      <section class="pt-contact__section">
        <h4 id="#pt-add-event">{{t 'contact.template.addEventQuestion'}}</h4>
        <p>{{t 'contact.template.addEventAnswer'}}:
          <a href="https://goo.gl/forms/tPzwRw268mh6PmcZ2" title="https://goo.gl/forms/tPzwRw268mh6PmcZ2" target="_blank">
